{
  "name": "handler",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:full": "turbo run clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "@next/eslint-plugin-next": "latest",
    "eslint-plugin-simple-import-sort": "^12.1.1"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.15.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "^1.7.0"
    }
  }
}
